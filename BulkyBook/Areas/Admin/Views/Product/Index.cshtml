
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary"> Product List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary text-light" asp-action="Upsert"><i class="fas fa-plus"></i>&nbsp; New Product</a>
    </div>
</div>

<br />

<div class="p-4 border rounded">
    <table id="tblProducts" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Title</th>
                <th>ISBN</th>
                <th>ListPrice</th>
                <th>Author</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
